{
  "name": "olinc-admin-monorepo",
  "version": "1.0.0",
  "private": true,
  "keywords": [
    "monorepo",
    "turbo",
    "olinc",
    "olinc admin",
    "vue",
    "vue admin",
    "vue3"
  ],
  "homepage": "https://github.com/JackZong/olinc",
  "bugs": "https://github.com/JackZong/olinc/issues",
  "repository": "olincjs/vue-olinc-admin.git",
  "license": "MIT",
  "author": {
    "name": "olinc",
    "email": "cqzongjian@gmail.com",
    "url": "https://github.com/JackZong"
  },
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--max-old-space-size=8192 turbo build",
    "build:analyze": "turbo build:analyze",
    "build:antd": "pnpm run build --filter=@olinc/web-antd",
    "build:docker": "./scripts/deploy/build-local-docker-image.sh",
    "build:docs": "pnpm run build --filter=@olinc/docs",
    "build:operator": "pnpm run build --filter=@olinc/operator",
    "build:admin": "pnpm run build --filter=@olinc/admin",
    "build:isv": "pnpm run build --filter=@olinc/isv",
    "build:merchant": "pnpm run build --filter=@olinc/merchant",
    "build:play": "pnpm run build --filter=@olinc/playground",
    "changeset": "pnpm exec changeset",
    "check": "pnpm run check:circular && pnpm run check:dep && pnpm run check:type && pnpm check:cspell",
    "check:circular": "vsh check-circular",
    "check:cspell": "cspell lint **/*.ts **/README.md .changeset/*.md --no-progress",
    "check:dep": "vsh check-dep",
    "check:type": "turbo run typecheck",
    "clean": "node ./scripts/clean.mjs",
    "commit": "czg",
    "dev": "turbo-run dev",
    "dev:all": "concurrently \"pnpm --filter=@olinc/main-app run dev\" \"pnpm --filter=@olinc/admin run dev\" \"pnpm --filter=@olinc/merchant run dev\" \"pnpm --filter=@olinc/operator run dev\" \"pnpm --filter=@olinc/isv run dev\"",
    "dev:docs": "pnpm -F @olinc/docs run dev",
    "dev:main": "pnpm -F @olinc/main-app run dev",
    "dev:operator": "pnpm -F @olinc/operator run dev",
    "dev:admin": "pnpm -F @olinc/admin run dev",
    "dev:isv": "pnpm -F @olinc/isv run dev",
    "dev:merchant": "pnpm -F @olinc/merchant run dev",
    "dev:play": "pnpm -F @olinc/playground run dev",
    "format": "vsh lint --format",
    "lint": "vsh lint",
    "postinstall": "pnpm -r run stub --if-present",
    "preinstall": "npx only-allow pnpm",
    "preview": "turbo-run preview",
    "publint": "vsh publint",
    "reinstall": "pnpm clean --del-lock && pnpm install",
    "test:unit": "vitest run --dom",
    "test:e2e": "turbo run test:e2e",
    "update:deps": "npx taze -r -w",
    "version": "pnpm exec changeset version && pnpm install --no-frozen-lockfile",
    "catalog": "pnpx codemod pnpm/catalog"
  },
  "devDependencies": {
    "@changesets/changelog-github": "catalog:",
    "@changesets/cli": "catalog:",
    "@olinc/commitlint-config": "workspace:*",
    "@olinc/eslint-config": "workspace:*",
    "@olinc/prettier-config": "workspace:*",
    "@olinc/stylelint-config": "workspace:*",
    "@olinc/tailwind-config": "workspace:*",
    "@olinc/tsconfig": "workspace:*",
    "@olinc/turbo-run": "workspace:*",
    "@olinc/vite-config": "workspace:*",
    "@olinc/vsh": "workspace:*",
    "@playwright/test": "catalog:",
    "@types/node": "catalog:",
    "@vitejs/plugin-vue": "catalog:",
    "@vitejs/plugin-vue-jsx": "catalog:",
    "@vue/test-utils": "catalog:",
    "autoprefixer": "catalog:",
    "concurrently": "catalog:",
    "cross-env": "catalog:",
    "cspell": "catalog:",
    "happy-dom": "catalog:",
    "is-ci": "catalog:",
    "lefthook": "catalog:",
    "playwright": "catalog:",
    "rimraf": "catalog:",
    "tailwindcss": "catalog:",
    "turbo": "catalog:",
    "typescript": "catalog:",
    "unbuild": "catalog:",
    "vite": "catalog:",
    "vitest": "catalog:",
    "vue": "catalog:",
    "vue-tsc": "catalog:"
  },
  "engines": {
    "node": ">=20.12.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.22.0",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "eslint": "*"
      }
    },
    "overrides": {
      "@ast-grep/napi": "catalog:",
      "@ctrl/tinycolor": "catalog:",
      "clsx": "catalog:",
      "element-plus": "catalog:",
      "esbuild": "0.25.3",
      "fleet-ui": "catalog:",
      "jiti": "catalog:",
      "pinia": "catalog:",
      "vue": "catalog:"
    },
    "neverBuiltDependencies": [
      "canvas",
      "node-gyp"
    ]
  }
}
